            "parameters": {
                "type": "object",
                "properties": {},
                "required": []
            }
        },
        {
            "name": "give_options",
            "description": "Offer options for what the customer wants",
            "parameters": {
                "type": "object",
                "properties": {
                    "item_name": {
                        "type": "string"
                    }
                },
                "required": [
